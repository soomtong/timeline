<div class="page-header">
    <h1>New timeline</h1>
</div>

<% form_for(timeline, {action: path_to.timelines(), method: 'POST', id: "timeline_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('timelines/form.ejs', {locals: {form: form, timeline: timeline}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Create timeline', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.timelines(), {class: 'btn'}) %>
    </div>
<% });%>
