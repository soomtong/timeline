<!DOCTYPE html>
<html lang="ko">
    <head>
        <title><%= title %></title>
        <%- stylesheet_link_tag('timeline','styles') %>
       	<%- javascript_include_tag('jquery-min', 'bootstrap', 'rails', 'application') %>
		<%- javascript_include_tag('timeline-min', 'script') %>
        <%- csrf_meta_tag() %>
        <!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
    </head>
    <body>
        <div class="container">
            <% var flash = request.flash('info').pop(); if (flash) { %>
                <div class="alert alert-info">
                    <a class="close" data-dismiss="alert">×</a>
                    <%- flash %>
                </div>
            <% } %>
            
            <% flash = request.flash('error').pop(); if (flash) { %>
                <div class="alert alert-error">
                    <a class="close" data-dismiss="alert">×</a>
                    <%- flash %>
                </div>
            <% }; %>
            
            <%- body %>
            
        </div>
    </body>
</html>
